{
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:7280",
    "RateLimitOptions": {
      "EnableRateLimiting": true,
      "Period": "10s",
      "Limit": 5,
      "PeriodTimespan": 10
    }
  },
  "Routes": [
    {
      "UpstreamPathTemplate": "/gateway/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/connect/token",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7250
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/refresh",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/connect/token",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7250
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/logout",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/connect/revocation",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7250
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/auth/register",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/auth/register",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/users",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/api/users",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/users/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/users/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/users/{id}/upload-photo",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamPathTemplate": "/api/users/{id}/upload-photo",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/users/{id}/delete-photo",
      "UpstreamHttpMethod": [ "Delete" ],
      "DownstreamPathTemplate": "/api/users/{id}/delete-photo",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/users/{id}/roles/{roleName}",
      "UpstreamHttpMethod": [ "Post", "Delete" ],
      "DownstreamPathTemplate": "/api/users/{id}/roles/{roleName}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/roles",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "DownstreamPathTemplate": "/api/roles",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/roles/{id}",
      "UpstreamHttpMethod": [ "Get", "Put", "Delete" ],
      "DownstreamPathTemplate": "/api/roles/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7202
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/gateway/uploads/{fileName}",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamPathTemplate": "/uploads/{fileName}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 7198
        }
      ]
    }
  ]
}